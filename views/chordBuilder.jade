extends layout

block content
    script(src = "/javascripts/chordBuilder/chordBuilder.js")

    +header("chordBuilder")

    .chordDisplayCon
        #display
            #divDisp
            #chordNoteCon
            #playHead

    .chordConfigPanel
        .instrumentPanel
            .chordInfoBar
                i.fas.fa-chevron-left.icon.disabled#leftChordArrow(onclick="setChord(curChord-1, true)")
                h3#chordPos= "Chord 1"
                i.fas.fa-chevron-right.icon#rightChordArrow(onclick="setChord(curChord+1, true)")
            .chordControlPanel
                h3= "Root"
                input.slider#rootSlider(type="range" min="1" max="7" step="0.01" oninput="setRoot(Math.round(this.value))")