include header
+header("meloBuilder")

.displayCon
    #display
        +divs
        #meloNoteCon
        #playHead

.configPanel.melo
    .meloConfigControl
        h3= "Repeat"
        input.slider#repeatSlider(type="range" min="0" max="3" value="1" step="0.01" oninput="setRepeat(this.value)")

    .meloConfigControl
        h3= "Complexity"
        input.slider#complexitySlider(type="range" min="1" max="6" value="4" step="0.01" oninput="setComplexity(this.value)")

    .meloConfigControl
        h3= "Uniformity"
        input.slider#uniformitySlider(type="range" min="0" max="1" value="0.6" step="0.01" oninput="setUniformity(this.value)")

    .meloConfigControl
        h3= "Rhythm"
        input.slider#rhythmSlider(type="range" min="0" max="1" value="0.2" step="0.01" oninput="setRhythm(this.value)")

script.
  loadMeloBuilder();